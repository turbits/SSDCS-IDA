{% include "includes/head.jinja" %}
{% include "includes/nav.jinja" %}
<div class="content">
    <div class="content-header">
        <h1>IDA System: Logs</h1>
    </div>
    
    {% if session['uuid'] and session['username'] and session['is_admin'] %}
        {% if data %}
            <table id="item-table" class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Level</th>
                        <th>Message</th>
                        <th>Created At</th>
                        <th>Author ID</th>
                        <th>Author Name</th>
                    </tr>
                </thead>
                <tbody id="item-table-body">
                    {% for item in data %}
                        <tr>
                            <td>{{ item['id'] }}</td>
                            <td>{{ item['level'] }}</td>
                            <td>{{ item['message'] }}</td>
                            <td>{{ item['created_at'] }}</td>
                            <td>{{ item['author_id'] }}</td>
                            <td>{{ item['author_name'] }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="info-message br">No data found.</p>
        {% endif %}
    {% else %}
        <script>window.location.href = "{{ url_for('pages.home') }}";</script>
    {% endif %}

    {% include "includes/messages.jinja" %}
</div>
{% include "includes/footer.jinja" %}

<script>
    var deleteButtons = document.querySelectorAll("#item-delete");

    function reloadTable() {
        var xhr = new XMLHttpRequest();

        xhr.open("GET", "/logs", true);
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.onload = function () {
            if (xhr.status === 200) {
                var tableBody = document.getElementById("item-table-body");
                tableBody.innerHTML = '';
                var data = JSON.parse(xhr.responseText);

                for (var i = 0; i < data.length; i++) {
                    var row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${data[i].id}</td>
                        <td>${data[i].level}</td>
                        <td>${data[i].message}</td>
                        <td>${data[i].created_at}</td>
                        <td>${data[i].author_id}</td>
                        <td>${data[i].author_name}</td>
                    `;
                }
            }
        };
    }

    deleteButtons.forEach((button) => {
        button.addEventListener("click", (e) => {
            e.preventDefault();
            var id = e.target.getAttribute('data-id');
            button.disabled = true;

            var xhr = new XMLHttpRequest();
            xhr.open("DELETE", `/logs/${id}`, true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        // button is inside form, inside td, inside tr
                        var row = button.parentNode.parentNode;
                        // selecting the tbody element, and removing the row
                        row.parentNode.removeChild(row);
                    } else {
                        // refresh the table
                        reloadTable();
                    }
                }
            };
            xhr.send();
        });
    });

</script>
