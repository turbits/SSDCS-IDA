{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        {% for category, message in messages %}
            {% if category == 'error' %}
                <p class="error-message br">{{ message }}</p>
            {% endif %}

            {% if category == 'success' %}
                <p class="success-message br">{{ message }}</p>
            {% endif %}
        
            {% if category == 'info' %}
                <p class="info-message br">{{ message }}</p>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endwith %}
