{% include "includes/head.jinja" %}
{% include "includes/nav.jinja" %}
<div class="content">
  <h1>IDA System</h1>
  
  {% if session_uuid and username %}
    <h2>Welcome, {{ username }}</h2>
    <a href="{{ url_for('pages.dashboard') }}" class="btn-primary br">Dashboard</a>
  {% else %}
    <h2>Please log in</h2>
    <a href="{{ url_for('pages.login') }}" class="btn-primary br">Login</a>
  {% endif %}

  {% if error %}
    <p class="error-message br">{{ error }}</p>
  {% endif %}
  
  {% if success %}
    <p class="success-message br">{{ success }}</p>
  {% endif %}
</div>
